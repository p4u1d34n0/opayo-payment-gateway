<?xml version="1.0"?>
<ruleset name="Opayo Coding Standard">
    <description>PSR-12 coding standard for Opayo payment gateway</description>

    <!-- Include the PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes -->
    <arg value="s"/>

    <!-- Use colors -->
    <arg name="colors"/>
</ruleset>
