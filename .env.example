# Opayo Configuration
# Copy this file to .env and fill in your credentials

# Vendor name provided by Opayo
OPAYO_VENDOR=your_vendor_name

# Encryption password provided by Opayo
OPAYO_ENCRYPTION_PASSWORD=your_encryption_password

# Environment: sandbox or live
OPAYO_ENVIRONMENT=sandbox

# Base URL for your application (used in notification responses)
OPAYO_BASE_URL=https://yourdomain.com

# Logging
OPAYO_LOG_PATH=/var/log/opayo.log
OPAYO_LOG_LEVEL=info
